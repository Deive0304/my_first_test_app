<div id="page-content">
<h2 class="text-center mt-4 mb-4">Profiles</h2>

  <div class="container">
    <% @articles.each do |articles| %>
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
          <div class="card text-center shadow-lg mb-5 bg-dark rounded">
            <div class="card-header font-italic text-light">
              by Deive Toraja
            </div>
            <div class="card-body bg-dark">
              <p class="card-name"><%= link_to articles.title, articles_path(articles), class: "text-warning" %></p>
              <p class="card-text text-light"><%= truncate(articles.description, length: 100) %></p>
              <%= link_to "View", article_path(articles), class: "btn btn-warning text-light" %>
              <%= link_to "Edit", edit_article_path(articles), class: "btn btn-warning text-light" %>
              <%= link_to "Delete", article_path(articles),class: "btn btn-warning text-light", method: :Delete, data: {confirm: "Are you sure?"} %>
            </div>
            <div class="card-footer text-light">
              <small> created ago <%= time_ago_in_words(articles.created_at) %> ago,
              edited <%= time_ago_in_words(articles.updated_at) %> ago</small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>