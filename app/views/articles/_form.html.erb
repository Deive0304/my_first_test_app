<div class="container">
  
    <div class="row justify-content-center">
      <div class="col-6">
      <%= render 'shared/errors' %>
        <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-dark rounded",local: true) do |f| %>
          <div class="form-group row">
              <%= f.label :Name, class: "col-2 col-form-label text-light" %>
            <div class="col-10 row-3">  
              <%= f.text_field :Name, class: "form-control", placeholder: "Name of student" %>
            </div>
          </div>
        
          <div class="form-group row">
            <%= f.label :Place_of_birth, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
            <%= f.text_area :description, class: "form-control", placeholder: "Birthplace" %>
          </div>
        </div>

      </div>
    </div>

      <div class="form-group row justify-content-center">
        <%= link_to "Update Profile", articles_path(@article), class: "btn btn-outline-primary btn-lg text-light mr-4" %>
        <%= link_to "Students profile", articles_path, class: "btn btn-outline-primary btn-lg text-light" %>
      </div>

      <% end %>

</div>